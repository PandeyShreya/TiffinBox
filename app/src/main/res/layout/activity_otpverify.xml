<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtpverifyActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
    <ImageView
        android:id="@+id/otpverify_image"
        android:layout_width="97dp"
        android:layout_height="109dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="0dp"
        android:src="@drawable/ic_otpverify" />

    <TextView
        android:id="@+id/verification_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/otpverify_image"
        android:layout_marginTop="8dp"
        android:text="Verification"
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verification_text"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="You will get a OTP via SMS"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/inputotp"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@id/textview2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/textbox_bg"
        android:textAlignment="center"
        android:inputType="number"
        />

    <Button
        android:id="@+id/otpverify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputotp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/btn_bg"
        android:text="Verify" />

    <TextView
        android:id="@+id/textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otpverify"
        android:layout_alignParentStart="true"

        android:layout_marginStart="17dp"
        android:layout_marginTop="14dp"
        android:text="Didn't recieve the verification OTP?"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otpverify"
        android:layout_marginStart="10dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/textview3"
        android:text="Resend again"
        android:textColor="@color/purple"
        android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/verified_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="210dp"
            android:src="@drawable/ic_verified" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/verified_image"
            android:layout_marginTop="11dp"
            android:text="VERIFIED"
            android:textColor="@color/grey"
            android:textAlignment="center"
            android:textSize="25sp" />
    </RelativeLayout>


</RelativeLayout>